<%- include('../layouts/main', { title: 'Đăng ký' }) %>

<div class="max-w-md mx-auto bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b">
        <h1 class="text-2xl font-bold text-center">Tạo tài khoản mới</h1>
    </div>

    <form action="/auth/register" method="POST" class="p-6">
        <div class="mb-6">
            <label for="username" class="block text-gray-700 font-medium mb-2">Tên người dùng</label>
            <input type="text" id="username" name="username" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input type="email" id="email" name="email" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-medium mb-2">Mật khẩu</label>
            <input type="password" id="password" name="password" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div class="mb-6">
            <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Xác nhận mật khẩu</label>
            <input type="password" id="confirmPassword" name="confirmPassword" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 mb-4">
            Đăng ký
        </button>

        <div class="text-center">
            <p class="text-gray-600">
                Đã có tài khoản?
                <a href="/auth/login" class="text-indigo-600 hover:underline">Đăng nhập ngay</a>
            </p>
        </div>
    </form>
</div>