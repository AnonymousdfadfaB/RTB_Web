<%- include('../layouts/main', { title: 'Đăng nhập' }) %>

<div class="max-w-md mx-auto bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b">
        <h1 class="text-2xl font-bold text-center">Đăng nhập</h1>
    </div>

    <form action="/auth/login" method="POST" class="p-6">
        <div class="mb-6">
            <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
            <input type="email" id="email" name="email" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div class="mb-6">
            <label for="password" class="block text-gray-700 font-medium mb-2">Mật khẩu</label>
            <input type="password" id="password" name="password" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <div class="text-right mt-2">
                <a href="/auth/forgot-password" class="text-sm text-indigo-600 hover:underline">Quên mật khẩu?</a>
            </div>
        </div>

        <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg hover:bg-indigo-700 mb-4">
            Đăng nhập
        </button>

        <div class="text-center">
            <p class="text-gray-600">
                Chưa có tài khoản?
                <a href="/auth/register" class="text-indigo-600 hover:underline">Đăng ký ngay</a>
            </p>
        </div>
    </form>
</div>