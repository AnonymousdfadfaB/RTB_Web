                    </div>
                </div>
            </div>

            <div class="copyright">
                <p>&copy; 2023 AuctionHub. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>

    <script>
        // Set minimum end time (current time + 1 hour)
        const now = new Date();
        now.setHours(now.getHours() + 1);
        document.getElementById('endTime').min = now.toISOString().slice(0, 16);

        // Set start time to now
        document.getElementById('startTime').value = new Date().toISOString().slice(0, 16);

        // DOM Elements
        const uploadBtn = document.getElementById('uploadBtn');
        const imagesInput = document.getElementById('images');
        const imagePreview = document.getElementById('imagePreview');
        const auctionForm = document.getElementById('auctionForm');
        const saveDraftBtn = document.getElementById('saveDraftBtn');

        // Event Listeners
        uploadBtn.addEventListener('click', () => {
            imagesInput.click();
        });

        imagesInput.addEventListener('change', function (e) {
            if (this.files.length > 10) {
                alert('Bạn chỉ có thể tải lên tối đa 10 ảnh');
                this.value = '';
                return;
            }

            Array.from(this.files).forEach(file => {
                if (!file.type.match('image.*')) {
                    alert('Vui lòng chỉ chọn file hình ảnh');
                    return;
                }

                const reader = new FileReader();
                reader.onload = function (event) {
                    const previewItem = document.createElement('div');
                    previewItem.className = 'preview-item';
                    previewItem.innerHTML = `
                        <img src="${event.target.result}" alt="Preview">
                        <div class="remove-btn" onclick="removeImage(this)"><i class="fas fa-times"></i></div>
                    `;
                    imagePreview.appendChild(previewItem);
                }
                reader.readAsDataURL(file);
            });
        });

        // Remove image preview
        function removeImage(element) {
            element.parentElement.remove();
        }

        // Save draft
        saveDraftBtn.addEventListener('click', function() {
            const title = document.getElementById('title').value;

            if (!title) {
                alert('Vui lòng nhập tiêu đề sản phẩm để lưu nháp');
                return;
            }

            alert(`Đã lưu nháp đấu giá "${title}" thành công!`);
        });

        // Form submission
        auctionForm.addEventListener('submit', function(e) {
            e.preventDefault();

            const title = document.getElementById('title').value;
            const startingPrice = document.getElementById('startingPrice').value;
            const previewItems = document.querySelectorAll('.preview-item');

            if (!title || !startingPrice) {
                alert('Vui lòng nhập đầy đủ thông tin bắt buộc');
                return;
            }

            if (previewItems.length < 3) {
                alert('Vui lòng tải lên ít nhất 3 hình ảnh sản phẩm');
                return;
            }

            // Show success message
            alert(`Đấu giá "${title}" đã được tạo thành công với giá khởi điểm ${parseInt(startingPrice).toLocaleString()} VND!`);

            // Redirect to homepage after 1 second
            setTimeout(() => {
                window.location.href = 'index.html';
            }, 1000);
        });
    </script>
</body>
</html>