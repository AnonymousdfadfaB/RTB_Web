    <script>
        // DOM Elements
        const backToListBtn = document.getElementById('backToList');
        const placeBidBtn = document.getElementById('placeBidBtn');
        const bidAmountInput = document.getElementById('bidAmount');
        const bidList = document.getElementById('bidList');
        const currentPriceElement = document.getElementById('currentPrice');
        const countdownElement = document.getElementById('countdown');
        const loginPrompt = document.getElementById('loginPrompt');
        const thumbnails = document.querySelectorAll('.thumbnail');
        const mainImage = document.getElementById('mainImage');

        // URL parameters to simulate product data
        const urlParams = new URLSearchParams(window.location.search);
        const productId = urlParams.get('id') || '1';
        const productTitle = urlParams.get('title') || 'Đồng hồ Rolex Oyster Perpetual';
        const sellerName = urlParams.get('seller') || 'NguyenVanA';
        const startingPrice = parseInt(urlParams.get('price')) || 25500000;
        const endTime = new Date();
        endTime.setDate(endTime.getDate() + 2); // 2 days from now

        // Set product details
        document.getElementById('productTitle').textContent = productTitle;
        document.getElementById('sellerName').textContent = sellerName;
        document.getElementById('currentPrice').textContent = startingPrice.toLocaleString() + ' ₫';
        bidAmountInput.min = startingPrice + 1;
        bidAmountInput.value = startingPrice + 1000;

        // Set countdown timer
        function updateCountdown() {
            const now = new Date();
            const timeDiff = endTime - now;

            if (timeDiff <= 0) {
                countdownElement.textContent = "Đã kết thúc";
                placeBidBtn.disabled = true;
                bidAmountInput.disabled = true;
                return;
            }

            const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
            const hours = Math.floor((timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
            const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60));

            countdownElement.textContent = `${days} ngày ${hours} giờ ${minutes} phút`;
        }

        // Initialize countdown
        updateCountdown();
        setInterval(updateCountdown, 60000); // Update every minute

        // Event Listeners
        backToListBtn.addEventListener('click', () => {
            window.location.href = 'index.html';
        });

        placeBidBtn.addEventListener('click', () => {
            const bidAmount = parseInt(bidAmountInput.value);
            const currentPrice = parseInt(currentPriceElement.textContent.replace(/[^\d]/g, ''));

            if (isNaN(bidAmount) || bidAmount <= currentPrice) {
                alert(`Giá đấu phải lớn hơn giá hiện tại (${currentPrice.toLocaleString()} VND)`);
                return;
            }

            // Update current price
            currentPriceElement.textContent = bidAmount.toLocaleString() + ' ₫';

            // Update bid input
            bidAmountInput.min = bidAmount + 1;
            bidAmountInput.value = bidAmount + 1000;

            // Add to bid history
            const now = new Date();
            const newBid = document.createElement('div');
            newBid.className = 'bid-item';
            newBid.innerHTML = `
                <div>
                    <div class="bidder">Bạn</div>
                    <div class="bid-time">Vừa xong</div>
                </div>
                <div class="bid-amount">${bidAmount.toLocaleString()} ₫</div>
            `;
            bidList.insertBefore(newBid, bidList.firstChild);

            alert(`Bạn đã đặt giá thành công ${bidAmount.toLocaleString()} VND!`);
        });

        // Change main image
        function changeMainImage(src) {
            mainImage.src = src;

            // Update active thumbnail
            thumbnails.forEach(thumb => thumb.classList.remove('active'));
            event.target.parentElement.classList.add('active');
        }

        // Simulate user login state
        const isLoggedIn = false; // Change to true to see bid form
        if (isLoggedIn) {
            loginPrompt.style.display = 'none';
        } else {
            placeBidBtn.disabled = true;
            bidAmountInput.disabled = true;
        }
    </script>
</body>
