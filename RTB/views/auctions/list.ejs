<%- include('../layouts/main', { title: 'Danh sách đấu giá' }) %>

<div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold">Danh sách đấu giá</h1>
    <% if (user) { %>
    <a href="/auctions/create" class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
        <i class="fas fa-plus mr-2"></i>Tạo mới
    </a>
    <% } %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="p-4 border-b flex justify-between items-center">
        <div class="w-1/3">
            <input type="text" placeholder="Tìm kiếm..." class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>
        <div>
            <select class="px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option>Sắp xếp theo</option>
                <option>Mới nhất</option>
                <option>Giá cao nhất</option>
                <option>Giá thấp nhất</option>
                <option>Sắp kết thúc</option>
            </select>
        </div>
    </div>

    <% if (auctions.length > 0) { %>
    <div class="divide-y">
        <% auctions.forEach(auction => { %>
        <div class="p-4 hover:bg-gray-50">
            <a href="/auctions/<%= auction._id %>" class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                    <img src="<%= auction.images[0] || '/images/default.jpg' %>" alt="<%= auction.title %>" class="w-24 h-24 object-cover rounded-lg">
                </div>
                <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold truncate"><%= auction.title %></h3>
                    <p class="text-gray-500 text-sm mb-2">Đăng bởi <%= auction.createdBy.username %></p>
                    <div class="flex items-center space-x-4">
                        <span class="text-indigo-600 font-bold"><%= auction.currentPrice.toLocaleString() %> VND</span>
                        <span class="text-sm text-gray-500"><i class="fas fa-gavel mr-1"></i><%= auction.bids.length %></span>
                        <span class="text-sm text-gray-500"><i class="fas fa-clock mr-1"></i><%= auction.timeLeft %></span>
                    </div>
                </div>
                <% if (auction.status !== 'active') { %>
                <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-semibold">
                    <%= auction.status === 'ended' ? 'Đã kết thúc' : 'Đã bán' %>
                </span>
                <% } %>
            </a>
        </div>
        <% }); %>
    </div>
    <% } else { %>
    <div class="p-8 text-center">
        <i class="fas fa-search fa-2x text-gray-300 mb-4"></i>
        <p class="text-gray-500">Không tìm thấy phiên đấu giá nào</p>
        <% if (user) { %>
        <a href="/auctions/create" class="inline-block mt-4 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
            Tạo phiên đấu giá đầu tiên
        </a>
        <% } %>
    </div>
    <% } %>

    <% if (totalPages > 1) { %>
    <div class="p-4 border-t flex justify-center">
        <nav class="flex space-x-2">
            <% if (currentPage > 1) { %>
            <a href="?page=<%= currentPage - 1 %>" class="px-3 py-1 border rounded-lg hover:bg-gray-100">&laquo;</a>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="?page=<%= i %>" class="px-3 py-1 border rounded-lg <%= i === currentPage ? 'bg-indigo-600 text-white' : 'hover:bg-gray-100' %>"><%= i %></a>
            <% } %>

            <% if (currentPage < totalPages) { %>
            <a href="?page=<%= currentPage + 1 %>" class="px-3 py-1 border rounded-lg hover:bg-gray-100">&raquo;</a>
            <% } %>
        </nav>
    </div>
    <% } %>
</div>