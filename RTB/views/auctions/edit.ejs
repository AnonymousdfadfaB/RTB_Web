<%- include('../layouts/main', { title: 'Chỉnh sửa đấu giá' }) %>

<div class="max-w-2xl mx-auto bg-white rounded-lg shadow overflow-hidden">
    <div class="p-6 border-b">
        <h1 class="text-2xl font-bold">Chỉnh sửa đấu giá</h1>
    </div>

    <form action="/auctions/<%= auction._id %>?_method=PUT" method="POST" enctype="multipart/form-data" class="p-6">
        <div class="mb-6">
            <label for="title" class="block text-gray-700 font-medium mb-2">Tiêu đề</label>
            <input type="text" id="title" name="title" value="<%= auction.title %>" required
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
        </div>

        <div class="mb-6">
            <label for="description" class="block text-gray-700 font-medium mb-2">Mô tả chi tiết</label>
            <textarea id="description" name="description" rows="6" required
                      class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"><%= auction.description %></textarea>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div>
                <label class="block text-gray-700 font-medium mb-2">Giá hiện tại (VND)</label>
                <p class="text-indigo-600 font-bold"><%= auction.currentPrice.toLocaleString() %></p>
            </div>

            <div>
                <label for="endTime" class="block text-gray-700 font-medium mb-2">Thời gian kết thúc</label>
                <input type="datetime-local" id="endTime" name="endTime"
                       value="<%= new Date(auction.endTime).toISOString().slice(0, 16) %>" required
                       class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            </div>
        </div>

        <div class="mb-6">
            <label class="block text-gray-700 font-medium mb-2">Hình ảnh hiện tại</label>
            <div class="grid grid-cols-3 gap-2">
                <% auction.images.forEach(image => { %>
                <div class="relative">
                    <img src="<%= image %>" class="w-full h-24 object-cover rounded-lg">
                    <button type="button" class="absolute top-1 right-1 bg-red-500 text-white rounded-full w-5 h-5 flex items-center justify-center text-xs"
                            onclick="this.parentElement.remove()">
                        ×
                    </button>
                    <input type="hidden" name="existingImages[]" value="<%= image %>">
                </div>
                <% }); %>
            </div>
        </div>

        <div class="mb-6">
            <label for="images" class="block text-gray-700 font-medium mb-2">Thêm hình ảnh mới (Tối đa 5 ảnh)</label>
            <input type="file" id="images" name="images" multiple accept="image/*"
                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <div id="imagePreview" class="grid grid-cols-3 gap-2 mt-4"></div>
        </div>

        <div class="flex justify-end space-x-4">
            <a href="/auctions/<%= auction._id %>" class="bg-gray-300 text-gray-800 px-6 py-2 rounded-lg hover:bg-gray-400">
                Hủy
            </a>
            <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                Lưu thay đổi
            </button>
        </div>
    </form>
</div>

<script>
    // Image preview for new images
    document.getElementById('images').addEventListener('change', function(e) {
        const preview = document.getElementById('imagePreview');
        preview.innerHTML = '';

        if (this.files.length > 5) {
            alert('Bạn chỉ có thể tải lên tối đa 5 ảnh');
            this.value = '';
            return;
        }

        Array.from(this.files).forEach(file => {
            const reader = new FileReader();
            reader.onload = function(event) {
                const img = document.createElement('img');
                img.src = event.target.result;
                img.className = 'w-full h-24 object-cover rounded-lg';
                preview.appendChild(img);
            }
            reader.readAsDataURL(file);
        });
    });

    // Set minimum end time (current time + 1 hour)
    const now = new Date();
    now.setHours(now.getHours() + 1);
    document.getElementById('endTime').min = now.toISOString().slice(0, 16);
</script>