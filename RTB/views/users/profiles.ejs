<%- include('../layouts/main', { title: 'Hồ sơ cá nhân' }) %>

<div class="max-w-4xl mx-auto">
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <div class="p-6 border-b">
            <h1 class="text-2xl font-bold">Hồ sơ cá nhân</h1>
        </div>

        <div class="p-6 md:flex">
            <div class="md:w-1/3 pr-6 mb-6 md:mb-0">
                <div class="text-center">
                    <div class="w-32 h-32 rounded-full bg-gray-200 mx-auto mb-4 overflow-hidden">
                        <% if (user.avatar) { %>
                        <img src="<%= user.avatar %>" alt="Avatar" class="w-full h-full object-cover">
                        <% } else { %>
                        <span class="flex items-center justify-center w-full h-full text-4xl text-gray-500">
                            <%= user.username.charAt(0).toUpperCase() %>
                        </span>
                        <% } %>
                    </div>
                    <h3 class="text-xl font-semibold"><%= user.username %></h3>
                    <p class="text-gray-500"><%= user.email %></p>

                    <button class="mt-4 text-indigo-600 hover:underline">Thay đổi ảnh đại diện</button>
                </div>
            </div>

            <div class="md:w-2/3">
                <form action="/users/profile" method="POST">
                    <div class="mb-6">
                        <label for="username" class="block text-gray-700 font-medium mb-2">Tên người dùng</label>
                        <input type="text" id="username" name="username" value="<%= user.username %>" required
                               class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <div class="mb-6">
                        <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" required
                               class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    </div>

                    <div class="mb-6">
                        <label for="currentPassword" class="block text-gray-700 font-medium mb-2">Mật khẩu hiện tại</label>
                        <input type="password" id="currentPassword" name="currentPassword"
                               class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        <p class="text-sm text-gray-500 mt-1">Chỉ điền nếu bạn muốn thay đổi mật khẩu</p>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <label for="newPassword" class="block text-gray-700 font-medium mb-2">Mật khẩu mới</label>
                            <input type="password" id="newPassword" name="newPassword"
                                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>

                        <div>
                            <label for="confirmPassword" class="block text-gray-700 font-medium mb-2">Xác nhận mật khẩu</label>
                            <input type="password" id="confirmPassword" name="confirmPassword"
                                   class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                        </div>
                    </div>

                    <div class="flex justify-end">
                        <button type="submit" class="bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700">
                            Cập nhật hồ sơ
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="mt-8 bg-white rounded-lg shadow overflow-hidden">
        <div class="p-6 border-b">
            <h2 class="text-xl font-bold">Các phiên đấu giá của bạn</h2>
        </div>

        <% if (userAuctions.length > 0) { %>
        <div class="divide-y">
            <% userAuctions.forEach(auction => { %>
            <div class="p-4 hover:bg-gray-50">
                <a href="/auctions/<%= auction._id %>" class="flex items-start space-x-4">
                    <div class="flex-shrink-0">
                        <img src="<%= auction.images[0] || '/images/default.jpg' %>" alt="<%= auction.title %>" class="w-24 h-24 object-cover rounded-lg">
                    </div>
                    <div class="flex-1 min-w-0">
                        <h3 class="text-lg font-semibold"><%= auction.title %></h3>
                        <div class="flex items-center space-x-4 mt-2">
                            <span class="text-indigo-600 font-bold"><%= auction.currentPrice.toLocaleString() %> VND</span>
                            <span class="text-sm text-gray-500"><i class="fas fa-gavel mr-1"></i><%= auction.bids.length %></span>
                            <span class="text-sm text-gray-500"><i class="fas fa-clock mr-1"></i><%= auction.timeLeft %></span>
                        </div>
                    </div>
                    <% if (auction.status !== 'active') { %>
                    <span class="bg-red-100 text-red-800 px-2 py-1 rounded-full text-xs font-semibold">
                        <%= auction.status === 'ended' ? 'Đã kết thúc' : 'Đã bán' %>
                    </span>
                    <% } %>
                </a>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="p-8 text-center">
            <i class="fas fa-gavel fa-2x text-gray-300 mb-4"></i>
            <p class="text-gray-500">Bạn chưa tạo phiên đấu giá nào</p>
            <a href="/auctions/create" class="inline-block mt-4 bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700">
                Tạo phiên đấu giá đầu tiên
            </a>
        </div>
        <% } %>
    </div>
</div>