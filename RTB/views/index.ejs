    <!-- Header -->
    <header>
        <div class="header-content">
            <div class="logo">
                <i class="fas fa-gavel"></i>
                <span>AuctionHub</span>
            </div>
            <div class="main-nav">
                <nav>
                    <ul>
                        <li><a href="#" class="active">Trang chủ</a></li>
